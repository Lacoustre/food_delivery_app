rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User subcollections (orders, notifications, addresses, etc.)
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Favorites - users can read/write their own favorites
    match /favorites/{favoriteId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Orders - users can read their own orders, authenticated users can read for analytics
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == resource.data.driverId ||
         exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
    }
    
    // Scheduled orders - users can read/write their own
    match /scheduled_orders/{orderId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId ||
         exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
      allow create: if request.auth != null;
    }
    
    // Meals - public read, admin write
    match /meals/{mealId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Settings - public read for restaurant status
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Reviews - public read, authenticated write
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    match /order_reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // Drivers - authenticated access
    match /drivers/{driverId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.uid == driverId || 
         exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
      allow create: if request.auth != null;
      
      // Driver subcollections
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == driverId;
      }
    }
    
    // Support - authenticated access
    match /support_chats/{chatId} {
      allow read, write: if request.auth != null;
    }
    
    match /support_messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Admin collections
    match /admins/{adminId} {
      allow read, write: if request.auth != null;
    }
    
    match /admin_notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
    
    // Complaints - users can create, admins can read/write
    match /users/{userId}/complaints/{complaintId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == userId || 
         exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
      allow create: if request.auth != null && request.auth.uid == userId;
    }
  }
}